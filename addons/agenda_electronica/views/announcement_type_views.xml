<odoo>
    <data>
        <!-- Vista de formulario -->
        <record id="view_announcement_type_form" model="ir.ui.view">
            <field name="name">school.announcement_type.form</field>
            <field name="model">school.announcement_type</field> <!-- Cambiado a school.announcement_type -->
            <field name="arch" type="xml">
                <form string="Announcement Type">
                    <sheet>
                        <group>
                            <field name="type" required="1"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista de lista -->
        <record id="view_announcement_type_tree" model="ir.ui.view">
            <field name="name">school.announcement_type.list</field>
            <field name="model">school.announcement_type</field> <!-- Cambiado a school.announcement_type -->
            <field name="arch" type="xml">
                <list string="Announcement Types">
                    <field name="type"/>
                    <field name="description"/>
                </list>
            </field>
        </record>

        <!-- AcciÃ³n de ventana para mostrar los tipos de anuncio -->
        <record id="action_announcement_type" model="ir.actions.act_window">
            <field name="name">Announcement Types</field>
            <field name="res_model">school.announcement_type</field> <!-- Cambiado a school.announcement_type -->
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_announcement_type_tree"/>
        </record>
    </data>
</odoo>
