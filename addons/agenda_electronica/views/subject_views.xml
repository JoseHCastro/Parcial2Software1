<odoo>
    <!-- Vista de lista para el modelo Subject -->
    <record id="view_subject_list" model="ir.ui.view">
        <field name="name">school.subject.list</field>
        <field name="model">school.subject</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Vista de formulario para el modelo Subject -->
    <record id="view_subject_form" model="ir.ui.view">
        <field name="name">school.subject.form</field>
        <field name="model">school.subject</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                </group>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n para abrir la vista de las asignaturas -->
    <record id="action_subject" model="ir.actions.act_window">
        <field name="name">Subjects</field>
        <field name="res_model">school.subject</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
