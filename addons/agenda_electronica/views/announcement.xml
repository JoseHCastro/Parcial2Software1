<odoo>
    <data>
        <!-- Vista de árbol (lista) para ver los anuncios -->
        <record id="view_announcement_tree" model="ir.ui.view">
            <field name="name">school.announcement.list</field>
            <field name="model">school.announcement</field>
            <field name="arch" type="xml">
                <list string="Announcements">
                    <field name="title"/>
                    <field name="date"/>
                    <field name="sent"/>
                    <field name="type_id"/>
                    <field name="emisor_id"/>
                </list>
            </field>
        </record>
        
        <!-- Vista Formulario para crear y editar Announcement -->
        <record id="view_announcement_form" model="ir.ui.view">
            <field name="name">school.announcement.form</field>
            <field name="model">school.announcement</field>
            <field name="arch" type="xml">
                <form string="Announcement">
                    <sheet>
                        <group>
                            <field name="title" required="1"/>
                            <field name="type_id" required="1"/>
                            <field name="emisor_id" readonly="1"/> <!-- Solo lectura -->
                        </group>
                        
                        <group>
                            <field name="date" required="1"/>
                            <field name="sent"/>
                        </group>
                        
                        <notebook>
                            <page string="Content">
                                <field name="message" widget="html"/>
                            </page>
                            <page string="Media">
                                <field name="audio_url"/>
                                <field name="video_url"/>
                                <field name="image_url"/>
                                <field name="file_url"/>
                            </page>
                            <page string="Blockchain">
                                <field name="blockchain_hash" readonly="1"/>
                            </page>
                        </notebook>

                        <group>
                            <field name="theme_id"/>
                            <field name="receiver_ids" widget="many2many_tags" placeholder="Select Receivers"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Acción para abrir la vista de anuncios -->
        <record id="action_announcement" model="ir.actions.act_window">
            <field name="name">Announcements</field>
            <field name="res_model">school.announcement</field>
            <field name="view_mode">list,form</field>
        </record>
        
    </data>
</odoo>
